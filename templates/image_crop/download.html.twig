{% extends 'base.html.twig' %}

{% block title %}Your cropped image{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Cropped Image
                </div>
                <div class="card-body">
                    Your image has been cropped. <br />
                    You saved {{ image.getSize() - image.getCroppedSize() }} bytes. <br />
                    <a href="/uploads/images/{{ image.getFullCroppedFileName() }}" download class="btn btn-primary mt-2">Download Cropped Image</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
